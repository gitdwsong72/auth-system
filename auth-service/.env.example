# ============================================================================
# Environment Configuration Template
# Phase 2: Optimized settings for each environment
# ============================================================================

ENV=development

# Database
DB_PRIMARY_DB_URL=postgresql://user:password@localhost:5432/authdb
DB_POOL_MAX_SIZE=50

# Redis
REDIS_URL=redis://localhost:6379/0

# JWT
JWT_ALGORITHM=RS256
JWT_PRIVATE_KEY_PATH=../keys/private.pem
JWT_PUBLIC_KEY_PATH=../keys/public.pem
JWT_SECRET_KEY=CHANGE_THIS_SECRET

# CORS
CORS_ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Backpressure (Phase 1)
BACKPRESSURE_ENABLE_BACKPRESSURE=true
BACKPRESSURE_MAX_CONCURRENT=80
BACKPRESSURE_QUEUE_CAPACITY=500

# Workers (Phase 2)
UVICORN_WORKERS=1
