ENV=development

# 테스트용 데이터베이스 (Docker Compose 포트)
DB_PRIMARY_DB_URL=postgresql://devuser:devpassword@localhost:5432/authdb?sslmode=disable

# 테스트용 Redis
REDIS_URL=redis://localhost:6379/0

# JWT 설정
JWT_PRIVATE_KEY_PATH=../keys/private.pem
JWT_PUBLIC_KEY_PATH=../keys/public.pem
JWT_ALGORITHM=RS256
JWT_SECRET_KEY=test-secret-key-for-integration-tests-minimum-32-chars

# CORS - JSON 형식으로 변경
CORS_ALLOWED_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Backpressure (과부하 방지)
BACKPRESSURE_ENABLE_BACKPRESSURE=true
BACKPRESSURE_MAX_CONCURRENT=80
BACKPRESSURE_QUEUE_CAPACITY=500
BACKPRESSURE_WAIT_TIMEOUT=5.0

# Uvicorn Workers (Phase 2)
# Development: 1-2 workers
# Staging: 4 workers
# Production: CPU 코어 수 기준 (권장: 2 x CPU cores)
UVICORN_WORKERS=1
